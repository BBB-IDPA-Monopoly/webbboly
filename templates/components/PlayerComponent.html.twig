<div id="player{{ player.id }}" class="card {% if isMe %}border-info border-3{% endif %} bg-{{ this.getPlayerClass }}">
    <div class="card-body">
        <div class="card-title">
            <h6>
                {{ player.nickname }}
                {% if isMe %}<span class="badge bg-info">Me</span>{% endif %}
                {% if isMyTurn %}<span class="badge bg-secondary">Am Zug</span>{% endif %}
            </h6>
        </div>
        <span class="d-block mb-2">BBBanknote: {{ player.money }}$</span>
        <button type="button" class="btn btn-sm btn-info"
                data-bs-toggle="modal" data-bs-target="#playerCards{{ player.id }}">
            Cards
        </button>

        <div class="modal fade" id="playerCards{{ player.id }}" tabindex="-1"
             aria-labelledby="playerCards{{ player.id }}label" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="playerCards{{ player.id }}Label">
                            Cards from {{ player.nickname }}
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            {% if player.gameBuildings|length > 0 %}
                                {% for gameBuilding in player.gameBuildings %}
                                    <div class="col-3">
                                        <div id="buildingCard">
                                            {{ component('BuildingCardComponent', {
                                                building: gameBuilding.building,
                                            }) }}
                                        </div>
                                        {% if isMe and isMyTurn %}
                                            <div class="d-flex justify-between gap-2">
                                                {% if gameBuilding.mortgaged %}
                                                        <button type="button"
                                                                class="btn btn-danger w-100"
                                                                data-bs-dismiss="modal"
                                                                onclick="localFetch('{{
                                                                    path('app_game_mortgage', {
                                                                        code: player.game.code,
                                                                        playerId: player.id,
                                                                        buildingId: gameBuilding.id
                                                                    })
                                                                }}')">
                                                            Hypothek bezahlen ({{ gameBuilding.building.mortgage }}$)
                                                        </button>
                                                {% else %}
                                                        <button type="button"
                                                                class="btn btn-success w-100"
                                                                data-bs-dismiss="modal"
                                                                onclick="localFetch('{{
                                                                    path('app_game_mortgage', {
                                                                        code: player.game.code,
                                                                        playerId: player.id,
                                                                        buildingId: gameBuilding.id
                                                                    })
                                                                }}')">
                                                            Hypothek aufnehmen
                                                        </button>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-info" role="alert">
                                        {{ player.nickname }} hat keine Geb√§ude
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
