{% component LinkComponent with {
    id: 'startGame',
    type: 'success',
    href: game.isGameReady ? path('app_game_start', {
        'code': game.code,
    }) : '#',
    disabled: not game.isGameReady,
} %}
    {% block content %}
        Spiel starten

        {% if game.isGameFull and not game.isGameReady %}
            <span id="gameDisabledMsg" class="badge bg-danger">Warten darauf, dass die Spieler bereit sind...</span>
        {% elseif not game.isGameReady %}
            <span id="gameDisabledMsg" class="badge bg-danger">Warten darauf, dass Spieler beitreten...</span>
        {% endif %}
    {% endblock %}
{% endcomponent %}
