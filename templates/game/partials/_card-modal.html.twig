<div class="modal fade" id="cardModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
     aria-labelledby="buildingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <div id="chanceCard" class="card mb-3">
                    <div class="card-body">
                        <div class="row justify-content-center text-center">
                            <h5 class="card-title p-2">
                                {{ gameCard.card.type.value == 'CHANCE' ? 'Ereigniskarte' : 'Gemeinschaftskarten' }}
                            </h5>
                            <div class="col-8">
                                <p>{{ gameCard.card.text }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-between gap-2">
                    <button class="btn btn-primary w-100"
                            data-bs-dismiss="modal"
                            onclick="localFetch('{{ path('app_game_call_card_function', {
                                code: player.game.code,
                                player: player.id,
                                card: gameCard.id,
                            }) }}')">
                        Weiter
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
