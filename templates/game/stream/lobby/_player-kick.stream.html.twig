<turbo-stream action="append" target="lobby">
    <template>
        <script>
            const path = (path, params) => {
                const url = new URL(path, window.location.origin);
                Object.keys(params).forEach(key => url.searchParams.append(key, params[key]));
                return url.href;
            }

            window.location.replace(path('{{ path('app_index') }}', {
                'message': 'You have been kicked from the lobby.',
                'type': 'danger'
            }));
        </script>
    </template>
</turbo-stream>
